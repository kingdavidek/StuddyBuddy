<%= form_for(@pieces) do |f| %>
  <ul>
  <% @pieces.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>

  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </p>

  <p>
    <%= f.label :thoughts %><br />
    <%= f.text_area :thoughts %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>